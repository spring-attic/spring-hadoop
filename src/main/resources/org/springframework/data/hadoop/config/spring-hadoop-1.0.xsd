	<!-- Hive -->
	<xsd:element name="hive-client">
		<xsd:complexType>
			<xsd:annotation>
			   <xsd:documentation><![CDATA[
Defines a Hive client for connecting to a Hive server through the Thrift protocol.
					]]></xsd:documentation>
		      <xsd:appinfo>
