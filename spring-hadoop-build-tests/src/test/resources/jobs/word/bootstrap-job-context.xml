<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="autowiredWordCount" class="org.springframework.data.hadoop.mapreduce.JobFactoryBean">
		<property name="mapper" ref="mapper" />
		<property name="combiner" ref="reducer" />
		<property name="reducer" ref="reducer" />
		<property name="inputPaths" value="${input.path:target/input/word}" />
		<property name="outputPath" value="${output.path:target/output/word}" />
		<property name="outputKeyClass" value="org.apache.hadoop.io.Text" />
		<property name="outputValueClass" value="org.apache.hadoop.io.IntWritable" />
	</bean>

	<bean id="mapper" class="org.springframework.data.hadoop.test.word.CustomTokenizerMapper">
		<property name="tokenizer" ref="${tokenizer.ref:simpleTokenizer}" />
	</bean>

	<bean id="simpleTokenizer" class="org.springframework.data.hadoop.test.word.CustomTokenizerMapper$SimpleTokenizer" />

	<bean id="wordTokenizer" class="org.springframework.data.hadoop.test.word.WordTokenizer" />

	<bean id="reducer" name="combiner" class="org.springframework.data.hadoop.test.word.IntSumReducer" />

	<context:property-placeholder properties-ref="bootstrap" system-properties-mode="OVERRIDE" />

	<bean id="bootstrap" class="org.springframework.data.hadoop.context.BootstrapPropertiesFactoryBean" />

</beans>
